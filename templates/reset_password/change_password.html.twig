{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        .reset-box {
            background-color: #fff;
            padding: 2.5rem;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .reset-box h2 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .btn {
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
        }

        @media (max-width: 576px) {
            .reset-box {
                padding: 2rem 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="reset-box">
        <h2>Définir un nouveau mot de passe</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {{ form_start(passwordForm) }}
            <div class="form-group mb-3">
                {{ form_label(passwordForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(passwordForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(passwordForm.plainPassword) }}
            </div>

            <button class="btn btn-primary w-100">Changer le mot de passe</button>
        {{ form_end(passwordForm) }}

        <div class="text-center mt-3">
            <a href="{{ path('app_login') }}">← Retour à la connexion</a>
        </div>
    </div>
{% endblock %}
