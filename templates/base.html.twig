<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon projet Symfony{% endblock %}</title>
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('styles/custom_admin.css') }}">
    {% endblock %}
</head>
<body>
{% if app.user %}
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">MonApp</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('profile_edit') }}">Mon profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('change_password') }}">Changer mot de passe</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="{{ path('app_logout') }}">DÃ©connexion</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
{% endif %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div 
            class="flash-message" 
            data-type="{{ label }}" 
            data-message="{{ message|e('js') }}">
        </div>
    {% endfor %}
{% endfor %}

    {% block body %}
    {% endblock %}

    {% block javascripts %}
        {{ importmap() }}
        {{ encore_entry_script_tags('app') }}

    {% endblock %}
</body>
</html>
