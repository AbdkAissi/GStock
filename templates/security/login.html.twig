{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        .login-box {
            background-color: #fff;
            padding: 2.5rem;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .login-logo {
            display: block;
            margin: 0 auto 1.5rem;
            width: 100px;
        }

        .login-footer {
            margin-top: 1.5rem;
            text-align: center;
        }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
        }

        .input-with-icon {
            padding-left: 2.5rem;
        }

        button[type="submit"] {
            transition: all 0.3s ease;
        }

        button[type="submit"]:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
        }

        @media (max-width: 576px) {
            .login-box {
                padding: 2rem 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-box">
        <img src="{{ asset('images/dashboard-empty.svg') }}" alt="Logo" class="login-logo">

        <h2 class="text-center mb-4">Connexion</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group mb-3">
                <label for="email" class="form-label">Adresse email</label>
                <div class="input-group">
                    <span class="input-icon">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input type="email" id="email" name="email" class="form-control input-with-icon" value="{{ last_username }}" required autofocus>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <div class="input-group">
                    <span class="input-icon">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input type="password" id="password" name="password" class="form-control input-with-icon" required>
                </div>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                <label class="form-check-label" for="remember_me">
                    Se souvenir de moi
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Se connecter</button>
        </form>

        <div class="login-footer">
            <a href="{{ path('app_reset_password') }}">Mot de passe oubli√© ?</a>
        </div>
    </div>
{% endblock %}
