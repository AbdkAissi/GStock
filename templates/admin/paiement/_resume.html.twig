{% set commande = entity.instance.commandeVente ?? entity.instance.commandeAchat %}
{% set paiements = commande ? commande.paiements : [entity.instance] %}

<div class="paiement-resume bg-light p-4 rounded">
    <h4 class="mb-4 border-bottom pb-2">
        <i class="fas fa-history me-2"></i>
        Historique des paiements pour 
        <span class="text-primary">{{ entity.instance.getBeneficiaire() ?? 'Non spécifié' }}</span>
    </h4>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th class="sortable-column" style="cursor: pointer">Date <i class="fas fa-sort ms-1"></i></th>
                    <th class="sortable-column" style="cursor: pointer">Montant <i class="fas fa-sort ms-1"></i></th>
                    <th>Méthode</th>
                    <th>Statut</th>
                    <th>Réf.</th>
                </tr>
            </thead>
            <tbody>
                {% for p in paiements|sort((a, b) => b.date <=> a.date) %}
                    <tr class="{{ p.id == entity.instance.id ? 'table-active' }} align-middle">
                        <td>{{ p.date|date('d/m/Y') }}</td>
                        <td>{{ p.montant|number_format(2, ',', ' ') }} MAD</td>
                        <td>
                            {% set method_icons = {
                                'especes': 'money-bill-wave',
                                'carte': 'credit-card',
                                'cheque': 'file-invoice-dollar',
                                'virement': 'exchange-alt'
                            } %}
                            <i class="fas fa-{{ method_icons[p.moyenPaiement] ?? 'question-circle' }} me-2"></i>
                            {{ p.moyenPaiement|capitalize }}
                        </td>
                        <td>
                            {% if p.commandeVente or p.commandeAchat %}
                                <span class="badge bg-success">
                                    <i class="fas fa-link me-1"></i> Commande
                                </span>
                            {% else %}
                                <span class="badge bg-secondary">
                                    <i class="fas fa-unlink me-1"></i> Autonome
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ ea_url()
                                .setController('App\\Controller\\Admin\\PaiementCrudController')
                                .setAction('detail')
                                .setEntityId(p.id) }}"
                                class="btn btn-sm btn-outline-primary">
                                #{{ p.id }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot class="table-group-divider">
                <tr>
                    <th>Total ({{ paiements|length }} paiements)</th>
                    <th class="text-success">{{ entity.instance.getTotalPaiements()|number_format(2, ',', ' ') }} MAD</th>
                    <th colspan="3"></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
