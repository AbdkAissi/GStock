{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1><i class="fas fa-key"></i> Changer mon mot de passe</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="card p-4 shadow-sm">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.oldPassword) }}
                {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.newPassword) }}
                {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button class="btn btn-primary mt-3">
                <i class="fas fa-save"></i> Sauvegarder
            </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
